{
  "python.languageServer": "Pylance",

  // Auto-imports & IntelliSense
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "editor.quickSuggestions": { "strings": true },

  // Testing (pytest)
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["."],

  // Use the interpreter where FastAPI is installed:
  // Command Palette → Python: Select Interpreter
  // (No setting here—pick it per-workspace)

  // Ruff & Mypy (prefer dedicated extensions)
  // If you keep the old linting toggles, they should not conflict,
  // but consider using the official Ruff and Mypy extensions.
  "python.linting.enabled": true,

  // If you insist on invoking binaries from .venv (Windows paths shown):
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "${workspaceFolder}/.venv/Scripts/mypy.exe",
  "python.linting.mypyArgs": [
    "--config-file",
    "${workspaceFolder}/pyproject.toml"
  ],

  "python.linting.ruffEnabled": true,
  "python.linting.ruffPath": "${workspaceFolder}/.venv/Scripts/ruff.exe",

  // Ruff config file
  "ruff.configuration": "${workspaceFolder}/pyproject.toml"
}
